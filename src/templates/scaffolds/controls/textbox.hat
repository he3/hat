<div class="form-group" ng-class="{'has-error': form.{{name}}.$invalid}}">
	<label for="{{name}}">{{name}}</label>
	<input type="text" name="{{name}}" id="{{name}}" class="form-control" ng-model="{{model}}" placeholder="{{label}}" {{#if required}} required {{/if}} {{#if hasMinimum }} minimum="{{minimum}}" {{/if}} {{#if hasMinLength}} ng-minlength="{{minLength}}" {{/if}} />
  {{#if required}}
		<span class="help-block" ng-show="form.{{name}}.$error.required && form.{{name}}.$dirty">{{name}}
			is required</span>
  {{/if}}
</div>