<div class="form-group">
	<label for="{{name}}">{{label}}</label>
  <select name="{{name}}" id="{{name}}" class="form-control" ng-model="{{model}}" {{#if required}}required {{/if}}>
		<option value="">{{select-default}}</option>
	</select>
  {{#if required}}
    <span class="help-block" ng-show="form.{{name}}.$error.required && form.{{name}}.$dirty">{{name}} is required</span>
  {{/if}}
</div>